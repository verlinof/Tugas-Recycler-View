<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardGambarPahlawan"
        android:layout_width="140dp"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp"
        >
        <ImageView
            android:id="@+id/gambarPahlawan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pattimura"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNamaPahlawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardGambarPahlawan"
        android:layout_marginStart="10dp"
        android:text="Pattimura"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvBioPahlawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardGambarPahlawan"
        android:layout_alignBottom="@id/cardGambarPahlawan"
        android:layout_below="@id/tvNamaPahlawan"
        android:layout_marginStart="10dp"
        android:text="Pattimura"
        android:textSize="15dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        />


</RelativeLayout>