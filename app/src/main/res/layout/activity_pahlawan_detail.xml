<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PahlawanDetail"
    android:padding="25dp"
    >

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Detail Pahlawan"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/baseline_arrow_back_ios_24"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/ivCardPahlawan"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginVertical="25dp"
        android:layout_below="@id/tvDetails"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp"
        >

        <ImageView
            android:id="@+id/ivPahlawan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNamaPahlawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greyhound"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/ivCardPahlawan"
        />

    <TextView
        android:id="@+id/tvBioPahlawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaPahlawan"
        android:text="Verlino Raya F."
        android:textSize="18dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        />

</RelativeLayout>